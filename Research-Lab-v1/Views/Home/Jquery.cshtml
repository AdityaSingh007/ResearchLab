
@{
    ViewBag.Title = "Jquery";
}
<link href="~/Content/jquery.spin.css" rel="stylesheet" />
<form id="person-form" class="form-horizontal" style="padding-top:10px">

    <div class="form-group">
        <label for="fullname" class="col-sm-3 control-label">Name</label>
        <div class="col-sm-9">
            <input type="text" id="fullname" name="fullname" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label for="age" class="col-sm-3 control-label">Age</label>
        <div class="col-sm-9">
            <input type="text" id="age" name="age" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label for="type-ahead" class="col-sm-3 control-label">Search</label>
        <div class="col-sm-9">
            <input id="type-ahead" type="text" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-7">
            <button type="submit" id="btnSubmit" class="btn btn-primary">Submit</button>
           
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
            <div class="spin" data-spin style="height:35px;width:25px" />
        </div>
    </div>
</form>
@section scripts
{
    <script src="~/Scripts/jquery.spin.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.spin').spin('hide');
            $('#btnSubmit').click(function (e) {
                $('.spin').spin('show');
                var opts = {
                    lines: 8, // The number of lines to draw
                    speed: 2,
                    radius: 3,
                    length: 3,
                    width: 2,
                    top: -20,
                    zIndex: 10,
                    left: 35
                };
                //var spin = $("#mySpinner").spin(opts);
                $("#btnSubmit").css("opacity", "0.3");

                //Do work...  Simulate with setTimeout      
                //e.preventDefault();
            })
            setTimeout(function () {

                //Restore original button
                //spin.data().spinner.stop();
                $('.spin').spin('hide');
                $("#btnSubmit").css("opacity", "1");
            }, 5000);      
        })
    </script>

}

