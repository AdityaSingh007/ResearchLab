<div class="col-md-3">
    <button id="button1" class="form-control btn btn-info">Resolve</button>
</div>
<div class="col-md-3">
    <button id="button2" class="form-control btn btn-info">Reject</button>
</div>
<div class="row">
    <div class="col-md-3">
        <div id="Output" hidden><img src="../Content/images/loading-image.gif" /></div>
    </div>
</div>

